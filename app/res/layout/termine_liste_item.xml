<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_list_item_date"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textSize="11pt" />
    
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="20dp"
	    android:orientation="horizontal" >
        
        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/iv_list_item_busy"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:src="@drawable/termine_ic_busy"
		    android:contentDescription="@string/content_busy"
		    android:layout_weight="1"
		    android:visibility="invisible" />
        
        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/iv_list_item_home"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:src="@drawable/termine_ic_home"
		    android:contentDescription="@string/content_home"
		    android:layout_weight="1"
		    android:visibility="invisible" />
        
    </LinearLayout>

</LinearLayout>