<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/txtFach"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Fachname"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtDatum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Prüfungsdatum"
        android:inputType="text" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/duelpRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:numStars="5"
        android:rating="0.0"
        android:stepSize="1.0" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/checkedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false" />

    <TextView
        android:id="@+id/lblChkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eingecheckt" />

</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:orientation="horizontal" >
	<Button
	    android:id="@+id/btnSave"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Speichern" />
	<Button
	    android:id="@+id/btnDel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Fach löschen" />
	</LinearLayout>

</LinearLayout>