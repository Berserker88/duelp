<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/header"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
		android:background="@drawable/termine_background_header" >
	    
		
		<TextView
		    android:id="@+id/tv_kalendar_title"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_centerHorizontal="true"
		    android:gravity="center"
		    android:padding="5dp"
		    android:paddingLeft="5dp"
		    android:textSize="12pt"
		    android:textStyle="bold"
		    android:textColor="@color/white" />

		<ImageView
		    android:id="@+id/iv_kalendar_liste"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_alignParentRight="true"
		    android:src="@drawable/termine_ic_list"
		    android:contentDescription="@string/content_termine_list" />
			
	</RelativeLayout>
	
	<GridView xmlns:android="http://schemas.android.com/apk/res/android" 
	    android:id="@+id/gv_kalendar_wochentage"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:numColumns="7"
	    android:stretchMode="columnWidth"
	    android:gravity="center"
	    android:listSelector="#00000000" />
	
	<GridView xmlns:android="http://schemas.android.com/apk/res/android" 
	    android:id="@+id/gv_kalendar"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    android:numColumns="7"
	    android:verticalSpacing="2dp"
	    android:horizontalSpacing="2dp"
	    android:stretchMode="columnWidth"
	    android:gravity="center"
	    android:listSelector="#00000000" />
</LinearLayout>