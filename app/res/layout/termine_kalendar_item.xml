<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="@drawable/termine_kalendar_dynamicbackground" >
    
	<TextView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/day_of_month"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    android:textStyle="bold"
	    android:textColor="@color/white" />
	
	<ImageView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/date_icon1"
	    android:layout_width="match_parent"
	    android:layout_height="20dp"
		android:src="@drawable/termine_ic_busy" 
		android:visibility="invisible"
		android:contentDescription="@string/content_busy" />
	
	<ImageView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/date_icon2"
	    android:layout_width="match_parent"
	    android:layout_height="20dp"
		android:src="@drawable/termine_ic_home" 
		android:visibility="invisible"
		android:contentDescription="@string/content_home" />
	
</LinearLayout>